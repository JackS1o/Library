{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "compilerOptions": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "target": { "type": "string" },
        "module": { "type": "string" },
        "outDir": { "type": "string" },
        "strict": { "type": "boolean" }
      },
      "esModuleInterop": true
    },
    "include": {
      "type": "array",
      "items": { "type": "string" }
    },
    "exclude": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": ["compilerOptions"]
}
